<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact page</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <header><%- include("../Base/header")%></header>
    <h1 class="contact">Kindly send us a message via the blocks below:</h1>
    <form action="" method="get" id="dform">
      <label for="name">Full Name</label>
      <input
        type="text"
        name="Name"
        id="name"
        placeholder="Enter your full name here---"
      /><br />
      <label for="email">Email</label>
      <input
        type="email"
        name="Email"
        id="email"
        placeholder="Enter your email here---"
      /><br />
      <label>Message</label>
      <textarea
        name="message"
        id="message"
        cols="30"
        rows="10"
        placeholder="type your message here---"
      ></textarea
      ><br />
      <input type="submit" name="submit" id="submit" />
    </form>
    <footer><%- include("../Base/footer")%></footer>
    <script>
      let fName = document.getElementById("name"),
        email = document.getElementById("email"),
        message = document.getElementById("message"),
        submit = document.getElementById("submit"),
        form = document.getElementById("dform");
      submit.addEventListener("click", (e) => {
        e.preventDefault();
        if (fName.value !== "" && email.value !== "" && message.value !== "") {
          form.innerHTML = "FormData saved successfully!";
          form.style.backgroundColor = "green";
        } else {
          form.innerHTML = "Error occurred!";
          form.style.backgroundColor = "red"
        }
      });
    </script>
  </body>
</html>
